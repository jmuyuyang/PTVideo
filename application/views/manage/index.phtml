<?php
$paginated = function ($page,$num,$size){
    $half = intval($size / 2); 
    $page_start = max(1, $page - $half); 
    $page_end = min($page_start + $size - 1, $num);
    $page_start = max(1, $page_end - $size + 1);
    return array($page_start,$page_end);
};
